<openerp>
    <data>

        <record id="ebp_wizard_form" model="ir.ui.view">
            <field name="name">wizard.export_ebp.form</field>
            <field name="model">wizard.export_ebp</field>
            <field name="arch" type="xml">
                <form string="export_ebp">
                    <field name="state" invisible="1"/>
                    <group states="choose">
                        <field name="fiscalyear_id" colspan="2" />
                        <field name="export_type" string="Export type" colspan="2" />
                        <group colspan="2">
                            <field name="ignore_draft" />
                            <field name="ignore_exported" />
                        <field name="partner_accounts" />
                    </group>
                         <group colspan="2">
                             <button special="cancel" string="Cancel" type="object" icon="gtk-cancel" />
                             <button name="export" type="object" icon="gtk-ok" string="Export" />
                         </group>
                    </group>
                    <group states="get" col="4" fill="0" >
                        <separator string="Moves exported to EBP" colspan="4"/>
                        <field name="exported_moves" colspan="4"/>
                        <field name="exported_lines" colspan="4"/>
                        <field name="ignored_moves" colspan="4"/>
                        <field name="exported_accounts" colspan="4"/>

                        <separator colspan="4" string="Export done"/>
                        <field name="name_writes" invisible="1" /> 
                        <field name="data_writes" nolabel="1" readonly="1" filename="name_writes" />
                        <field name="name_accounts" invisible="1" />
                        <field name="data_accounts" nolabel="1" readonly="1" filename="name_accounts" />
                        
                        <button special="cancel" string="Cancel" type="object" icon="gtk-cancel" />
                    </group>
                </form>
            </field>
        </record>

        <!-- key2="client_action_multi" ==> add submenu to "More" button -->
        <act_window id="action_ebp_wizard"
            name="Export EBP"
            res_model="wizard.export_ebp" 
            src_model="account.invoice"
            key2="client_action_multi" 
            view_mode="form" 
            view_type="form"
            target="new"
            multi="True"
            />
    </data>
</openerp>