<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_view_stock_inventory_empty_location" model="ir.actions.act_window">
            <field name="name">Confirm empty location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.inventory.empty.locations</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_confirm_empty_location" model="ir.ui.view">
            <field name="name">Confirm empty location</field>
            <field name="model">stock.inventory.empty.locations</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirm empty locations">
                    <group colspan="4" col="1">
                        <field name="location_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>                        
                    </group>
                    <group colspan="4" col="2">
                        <label string="This is the list of empty locations."/>
                        <label string="Do you want to continue ?"/>
                        <separator string="" colspan="4" />
                        <button special="cancel" string="_Cancel" icon='gtk-cancel'/>
                        <button name="confirm_empty_locations" string="Confirm empty locations" type="object" icon="gtk-ok"/>
                    </group>
                </form>
            </field>
        </record>

	</data>
</openerp>