<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="purchase_budget_wizard_form" model="ir.ui.view">
            <field name="name">purchase.budget.wizard.form</field>
            <field name="model">purchase.budget.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Budget warning">
                    <label
                        string="The following Budget Lines will be exhausted if you confirm the Purchase Order: you may have dificulties paying the Supplier Invoice."
                        colspan="4" />
                    <separator colspan="4" />
                    <field name="budget_line_ids" nolabel="1" colspan="4" />
                    <separator colspan="4" />
                    <group colspan="4" col="2">
                        <button special="cancel" string="Cancel" icon="gtk-cancel" default_focus="1" />
                        <button name="override_budget" string="Override Budgets" type="object" icon="gtk-jump-to" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>
