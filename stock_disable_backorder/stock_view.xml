<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <!-- Hide the buttons to split into serial numbers,
         and replace with simple cancel/split/done buttons.
         Also make the tree views editable to let users enter the lot numbers
         quickly. -->
    <data>
        <!--  Reception picking -->
        <record id="view_picking_in_form" model="ir.ui.view">
            <field name="name">Reception form</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
                <button name="draft_validate" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="after">
                    <button name="button_done" states="assigned" string="Receive"
                        class="oe_highlight"/>
                </button>
            </field>
        </record>
        <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">Picking line tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="editable">bottom</attribute>
                </tree>
                <!-- Making the tree editable means the form view becomes out of bound.
                     So we need to add the fields that we think users may want to change. -->
                <field name="location_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="state" position="after">
                    <button name="action_cancel" states="assigned,confirmed"
                        string="Cancel" type="object" icon="gtk-cancel"/>
                </field>
                <!-- Since the tree is editable, we have to make the fields have their onchanges -->
                <!-- Some of the fields already have an onchange but O.Dony said it could be removed.
                     To be on the safe side we'll enforce onchange for all fields.
                        https://github.com/odoo/odoo/pull/1078-->
                <field name="product_id" position="before">
                    <!-- we need field to be able to respect the ORM constraints -->
                    <field name="name" invisible="1"/>
                </field>
                <field name="product_id" position="attributes">
                    <attribute name="on_change">onchange_product_id(product_id,location_id,location_dest_id, False)</attribute>
                </field>
                <field name="product_qty" position="attributes">
                    <attribute name="on_change">onchange_quantity(product_id, product_qty, product_uom, product_uos)</attribute>
                </field>
                <!-- Strangely enough, v7 does not have a product_uos_qty here
                <field name="product_uos_qty" position="attributes">
                    <attribute name="on_change">onchange_uos_quantity(product_id, product_uos_qty, product_uos, product_uom)"</attribute>
                </field> -->
            </field>
        </record>
        <!-- This one is unused in v7 because the web client does not
             let you "zoom" from an editable o2m tree view to the form view.
             We change it anyway just to be on the safe side. -->
        <record id="view_move_picking_form" model="ir.ui.view">
            <field name="name">Picking line form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <button name="cancel_assign" position="after">
                    <button name="action_cancel" states="assigned,confirmed"
                        string="Cancel Move" type="object"/>
                </button>
            </field>
        </record>

        <!--  Internal picking -->
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">Internal picking form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <button name="draft_validate" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="after">
                    <button name="button_done" groups="base.group_user"
                        states="assigned" string="Transfer" class="oe_highlight"/>
                </button>
            </field>
        </record>
        <!-- Internal move lines views are the same as for receptions -->

        <!-- Delivery picking -->
        <record id="view_picking_out_form" model="ir.ui.view">
            <field name="name">Delivery picking form</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
                <button name="draft_validate" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="action_process" position="after">
                    <button name="button_done" groups="base.group_user"
                        states="assigned" string="Transfer" class="oe_highlight"/>
                </button>
            </field>
        </record>
        <!-- Delivery lines views are the same as for receptions -->

        <!-- Basic Stock Move views -->
        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">Stock Move tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="editable">bottom</attribute>
                </tree>
                <field name="state" position="after">
                    <button name="action_cancel" states="assigned,confirmed"
                        string="Cancel" type="object" icon="gtk-cancel"/>
                </field>
                <!-- Since the tree is editable, we have to make the fields have their onchanges -->
                <!-- Some of the fields already have an onchange but O.Dony said it could be removed.
                     To be on the safe side we'll enforce onchange for all fields.
                        https://github.com/odoo/odoo/pull/1078-->
                <!--TODO v8+: check the field "name" is still in the view -->
                <field name="product_id" position="attributes">
                    <attribute name="on_change">onchange_product_id(product_id,location_id,location_dest_id, False)</attribute>
                </field>
                <field name="product_qty" position="attributes">
                    <attribute name="on_change">onchange_quantity(product_id, product_qty, product_uom, product_uos)</attribute>
                </field>
                <!-- Strangely enough, v7 does not have a product_uos_qty here
                <field name="product_uos_qty" position="attributes">
                    <attribute name="on_change">onchange_uos_quantity(product_id, product_uos_qty, product_uos, product_uom)"</attribute>
                </field> -->
            </field>
        </record>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">Stock Move form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <button name="%(stock.action_partial_move_server)d"
                    position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
            </field>
        </record>

        <!-- Reception by move -->
        <record id="view_move_tree_reception_picking" model="ir.ui.view">
            <field name="name">Stock Move</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_move_tree_reception_picking"/>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <button name="%(stock.action_partial_move_server)d"
                    position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <field name="state" position="after">
                    <button name="action_cancel" states="assigned,confirmed"
                        string="Cancel" type="object" icon="gtk-cancel"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
