<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- add the day off and opening hours -->
		<record model="ir.ui.view" id="view_partner_address">
			<field name="name">partner_fdl.partner.address</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
			<xpath expr="//field[@name='website']" position="after">  
				<field name="hours" string="Opening Hours"/>
				<field name="day_off" string="Day Off"/>
			</xpath>
			</field>
		</record>	
	</data>
</openerp>
