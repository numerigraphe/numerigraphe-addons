<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_location_product" model="ir.ui.view">
            <field name="name">stock_partner_ref.location.product</field>
            <field name="inherit_id" ref="stock.view_stock_location_product"/>
            <field name="model">stock.location.product</field>
            <field name="arch" type="xml">
            	<data>
                    <xpath expr="//form/group[2]" position="after" >
                        <group>
                            <separator string="Additional information" colspan="4"/>
                            <field name="partner_id" colspan="4"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
